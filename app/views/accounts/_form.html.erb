<%= simple_form_for(@account) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= flash_messages layout_flash: true %>

  <div class="form-inputs">
    <%= f.input :name,
                autofocus: true,
                required: true,
                 input_html: { autocomplete: "name", class: "form-control-sm" },
                 label: "Your Business Name"
                %>
  </div>

  <%= f.simple_fields_for :owner do |o| %>
      <div class="form-inputs">
        <div class="row">
            <div class="col-md-6">
                <%= o.input :first_name,
                            required: true,
                            input_html: {  class: "form-control-sm" } %>
            </div>
            <div class="col-md-6">
                <%= o.input :last_name,
                            required: true,
                            input_html: {  class: "form-control-sm" } %>
            </div>
       </div>

        <%= o.input :email,
                    required: true,
                    autofocus: false,
                    input_html: { autocomplete: "email", class: "form-control-sm" } %>

        <div class="row">
            <div class="col-md-6">
                <%= o.input :password,
                            required: false,
                             hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", class: "form-control-sm" } %>
            </div>
             <div class="col-md-6">
                <%= o.input :password_confirmation,
                              required: true,
                              input_html: { autocomplete: "new-password", class: "form-control-sm" } %>
             </div>
        </div>
      </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-lg w-100 btn-success mt-4 mb-3" %>
  </div>
<% end %>
